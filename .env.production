NODE_ENV=production
PORT=10000

# Database (SQLite for file-based, or PostgreSQL URL for cloud database)
DATABASE_URL=./database.sqlite

# Hugging Face API (Free tier - get from https://huggingface.co/settings/tokens)
HF_API_KEY=your_hugging_face_api_key_here
HF_MODEL=microsoft/DialoGPT-medium

# Alternative: OpenAI-compatible API (optional)
OPENAI_API_KEY=your_openai_compatible_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Bot Configuration
BOT_NAME=CustomerSupportBot
CONFIDENCE_THRESHOLD=0.7
MAX_CONTEXT_MESSAGES=10
ESCALATION_KEYWORDS=human,agent,manager,escalate,speak to someone